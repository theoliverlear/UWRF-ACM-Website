{
  "compilerOptions": {
    "lib": ["dom", "ES2022"],
    "outDir": "./",
    "rootDir": "./",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "ES2022",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "@angular/localize"
    ]
  },
  "include": ["./angular/**/*"],
  "exclude": ["node_modules"],
  "angularCompilerOptions": {
    "enableIvy": true
  }
}